{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "style.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/style.css",
      "dest": "/style.css",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate",
        "content-type": "text/css"
      }
    },
    {
      "src": "/api/shorturl",
      "dest": "/index.js"
    },
    {
      "src": "/api/shorturl/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}